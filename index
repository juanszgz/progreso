  <script>
    // ====== CONFIG ======
    const ECTS_PER_SUBJECT = 6;
    const GOAL_ECTS = 240; // objetivo fijo

    // ====== TUS ASIGNATURAS ======
    // Nota: aqu√≠ hay 39; falta 1 para 40.
    const SUBJECTS = [
      // 1¬∫ S1
      { id:"1s1-01", name:"Fundamentos de f√≠sica", ects:6, group:"1¬∫ ¬∑ S1" },
      { id:"1s1-02", name:"Fundamentos de inform√°tica", ects:6, group:"1¬∫ ¬∑ S1" },
      { id:"1s1-03", name:"Fundamentos de administraci√≥n de empresas", ects:6, group:"1¬∫ ¬∑ S1" },
      { id:"1s1-04", name:"C√°lculo", ects:6, group:"1¬∫ ¬∑ S1" },
      { id:"1s1-05", name:"√Ålgebra", ects:6, group:"1¬∫ ¬∑ S1" },

      // 1¬∫ S2
      { id:"1s2-01", name:"Circuitos y sistemas", ects:6, group:"1¬∫ ¬∑ S2" },
      { id:"1s2-02", name:"Fundamentos de redes", ects:6, group:"1¬∫ ¬∑ S2" },
      { id:"1s2-03", name:"C√°lculo vectorial y diferencial", ects:6, group:"1¬∫ ¬∑ S2" },
      { id:"1s2-04", name:"Introducci√≥n a los computadores", ects:6, group:"1¬∫ ¬∑ S2" },
      { id:"1s2-05", name:"Matem√°ticas para la telecomunicaci√≥n", ects:6, group:"1¬∫ ¬∑ S2" },

      // 2¬∫ S1
      { id:"2s1-01", name:"Se√±ales y sistemas", ects:6, group:"2¬∫ ¬∑ S1" },
      { id:"2s1-02", name:"Fundamentos de electr√≥nica", ects:6, group:"2¬∫ ¬∑ S1" },
      { id:"2s1-03", name:"Probabilidad y procesos", ects:6, group:"2¬∫ ¬∑ S1" },
      { id:"2s1-04", name:"Electromagnetismo y ondas", ects:6, group:"2¬∫ ¬∑ S1" },
      { id:"2s1-05", name:"Interconexi√≥n de redes", ects:6, group:"2¬∫ ¬∑ S1" },

      // 2¬∫ S2
      { id:"2s2-01", name:"Electr√≥nica anal√≥gica", ects:6, group:"2¬∫ ¬∑ S2" },
      { id:"2s2-02", name:"Procesado digital de se√±ales", ects:6, group:"2¬∫ ¬∑ S2" },
      { id:"2s2-03", name:"Teor√≠a de comunicaci√≥n", ects:6, group:"2¬∫ ¬∑ S2" },
      { id:"2s2-04", name:"Electr√≥nica digital", ects:6, group:"2¬∫ ¬∑ S2" },
      { id:"2s2-05", name:"Programaci√≥n de redes y servicios", ects:6, group:"2¬∫ ¬∑ S2" },

      // 3¬∫ S1
      { id:"3s1-01", name:"Comunicaciones digitales", ects:6, group:"3¬∫ ¬∑ S1" },
      { id:"3s1-02", name:"Sistemas electr√≥nicos con microprocesadores", ects:6, group:"3¬∫ ¬∑ S1" },
      { id:"3s1-03", name:"Tecnolog√≠as de red", ects:6, group:"3¬∫ ¬∑ S1" },
      { id:"3s1-04", name:"Procesado de audio e imagen", ects:6, group:"3¬∫ ¬∑ S1" },
      { id:"3s1-05", name:"Medios de transmisi√≥n guiada", ects:6, group:"3¬∫ ¬∑ S1" },

      // 3¬∫ S2
      { id:"3s2-01", name:"Gesti√≥n de proyectos de telecomunicaci√≥n", ects:6, group:"3¬∫ ¬∑ S2" },
      { id:"3s2-02", name:"Electr√≥nica de comunicaciones", ects:6, group:"3¬∫ ¬∑ S2" },
      { id:"3s2-03", name:"Radiaci√≥n y propagaci√≥n", ects:6, group:"3¬∫ ¬∑ S2" },
      { id:"3s2-04", name:"An√°lisis y dimensionado de redes", ects:6, group:"3¬∫ ¬∑ S2" },
      { id:"3s2-05", name:"Producci√≥n de audio y v√≠deo", ects:6, group:"3¬∫ ¬∑ S2" },

      // 4¬∫ S1
      { id:"4s1-01", name:"Redes de comunicaciones m√≥viles", ects:6, group:"4¬∫ ¬∑ S1" },
      { id:"4s1-02", name:"Gesti√≥n de red", ects:6, group:"4¬∫ ¬∑ S1" },
      { id:"4s1-03", name:"Seguridad en redes y servicios", ects:6, group:"4¬∫ ¬∑ S1" },
      { id:"4s1-04", name:"An√°lisis y dise√±o de software", ects:6, group:"4¬∫ ¬∑ S1" },
      { id:"4s1-05", name:"Pr√°cticas Externas", ects:6, group:"4¬∫ ¬∑ S1" },

      // 4¬∫ S2
      { id:"4s2-01", name:"Transporte de servicios multimedia", ects:6, group:"4¬∫ ¬∑ S2" },
      { id:"4s2-02", name:"Dise√±o y evaluaci√≥n de redes", ects:6, group:"4¬∫ ¬∑ S2" },
      { id:"4s2-03", name:"Comercio electr√≥nico", ects:6, group:"4¬∫ ¬∑ S2" },
      { id:"4s2-04", name:"Trabajo de Final de Grado (TFG)", ects:6, group:"4¬∫ ¬∑ S2" }
    ];

    // total mostrado (40) es el objetivo real; si SUBJECTS tiene 39, se ver√° la diferencia
    const TOTAL_SUBJECTS_TARGET = 40;

    const STORAGE_KEY = "career_progress_teleco_ects_v2";

    // ====== UI ======
    const groupsEl = document.getElementById("groups");
    const fillEl = document.getElementById("progressFill");
    const stApproved = document.getElementById("stApproved");
    const stTotal = document.getElementById("stTotal");
    const stEcts = document.getElementById("stEcts");
    const progressText = document.getElementById("progressText");
    const pctBadge = document.getElementById("pctBadge");
    const searchEl = document.getElementById("search");

    const expandAllBtn = document.getElementById("expandAll");
    const collapseAllBtn = document.getElementById("collapseAll");
    const markAllBtn = document.getElementById("markAll");
    const unmarkAllBtn = document.getElementById("unmarkAll");
    const resetBtn = document.getElementById("reset");

    // ====== STATE ======
    let state = loadState(); // { [id]: true/false }
    let filterText = "";

    function loadState(){
      try{
        const raw = localStorage.getItem(STORAGE_KEY);
        if(!raw) return {};
        const parsed = JSON.parse(raw);
        return (parsed && typeof parsed === "object") ? parsed : {};
      }catch(e){
        return {};
      }
    }
    function saveState(){
      localStorage.setItem(STORAGE_KEY, JSON.stringify(state));
    }

    function isDone(id){ return !!state[id]; }

    function setDone(id, value){
      state[id] = !!value;
      saveState();
      render();
    }

    function resetAll(){
      state = {};
      localStorage.removeItem(STORAGE_KEY);
      render();
    }

    function matchesFilter(s){
      if(!filterText) return true;
      const t = filterText.toLowerCase().trim();
      return (s.name + " " + s.group).toLowerCase().includes(t);
    }

    function compute(){
      const approved = SUBJECTS.filter(s => isDone(s.id)).length;
      const ectsApproved = approved * ECTS_PER_SUBJECT;
      const pct = Math.max(0, Math.min(100, Math.round((ectsApproved / GOAL_ECTS) * 100)));
      return { approved, ectsApproved, pct };
    }

    function escapeHtml(str){
      return String(str)
        .replaceAll("&","&amp;")
        .replaceAll("<","&lt;")
        .replaceAll(">","&gt;")
        .replaceAll('"',"&quot;")
        .replaceAll("'","&#039;");
    }

    function groupBy(list, key){
      const map = new Map();
      list.forEach(item => {
        const k = item[key];
        if(!map.has(k)) map.set(k, []);
        map.get(k).push(item);
      });
      return map;
    }

    function groupProgress(fullGroupList){
      const total = fullGroupList.length;
      const approved = fullGroupList.filter(s => isDone(s.id)).length;
      const ectsApproved = approved * ECTS_PER_SUBJECT;
      const ectsTotal = total * ECTS_PER_SUBJECT;
      const pct = ectsTotal ? Math.round((ectsApproved/ectsTotal)*100) : 0;
      return { total, approved, ectsApproved, ectsTotal, pct };
    }

    function render(){
      const { approved, ectsApproved, pct } = compute();

      stApproved.textContent = approved;
      stTotal.textContent = TOTAL_SUBJECTS_TARGET; // objetivo de tu plan
      stEcts.textContent = ectsApproved;
      progressText.textContent = `${ectsApproved} / ${GOAL_ECTS} ECTS`;
      pctBadge.textContent = `${pct}%`;
      fillEl.style.width = `${pct}%`;

      groupsEl.innerHTML = "";

      const visible = SUBJECTS.filter(matchesFilter);

      // agrupaci√≥n visible (para render)
      const groupedVisible = groupBy(visible, "group");

      // orden fijo de grupos
      const order = ["1¬∫ ¬∑ S1","1¬∫ ¬∑ S2","2¬∫ ¬∑ S1","2¬∫ ¬∑ S2","3¬∫ ¬∑ S1","3¬∫ ¬∑ S2","4¬∫ ¬∑ S1","4¬∫ ¬∑ S2"];

      let renderedAny = false;

      order.forEach(groupName => {
        const items = groupedVisible.get(groupName) || [];
        if(items.length === 0) return;

        renderedAny = true;

        // Progreso del grupo completo (no solo lo filtrado)
        const fullGroupItems = SUBJECTS.filter(s => s.group === groupName);
        const p = groupProgress(fullGroupItems);

        const details = document.createElement("details");
        if(filterText) details.open = true;

        const summary = document.createElement("summary");
        summary.innerHTML = `
          <div class="sumLeft">
            <div class="courseTitle">${escapeHtml(groupName)}</div>
            <div class="courseMeta">${p.approved}/${p.total} aprobadas ¬∑ ${p.ectsApproved}/${p.ectsTotal} ECTS</div>
          </div>
          <div class="pill">${p.pct}%</div>
        `;

        const list = document.createElement("div");
        list.className = "list";

        items.forEach(s => {
          const done = isDone(s.id);
          const row = document.createElement("div");
          row.className = "row" + (done ? " done" : "");
          row.innerHTML = `
            <div class="main">
              <label>
                <input type="checkbox" ${done ? "checked" : ""} data-id="${s.id}">
                <div>
                  <span class="name">${escapeHtml(s.name)}</span>
                  <span class="meta">${ECTS_PER_SUBJECT} ECTS</span>
                </div>
              </label>
            </div>
            <div class="tag">${done ? "Aprobada ‚úÖ" : "Pendiente ‚è≥"}</div>
          `;
          list.appendChild(row);
        });

        details.appendChild(summary);
        details.appendChild(list);
        groupsEl.appendChild(details);
      });

      // listeners a checkboxes
      groupsEl.querySelectorAll('input[type="checkbox"][data-id]').forEach(cb => {
        cb.addEventListener("change", (e) => {
          const id = e.target.getAttribute("data-id");
          setDone(id, e.target.checked);
        });
      });

      if(!renderedAny){
        const empty = document.createElement("div");
        empty.className = "accordion";
        empty.innerHTML = `
          <div class="row">
            <div class="main">
              <div>
                <div class="name">No hay resultados</div>
                <div class="meta">Prueba con otra b√∫squeda</div>
              </div>
            </div>
            <div class="tag">üîé</div>
          </div>
        `;
        groupsEl.appendChild(empty);
      }
    }

    // ====== CONTROLES ======
    searchEl.addEventListener("input", (e) => {
      filterText = e.target.value || "";
      render();
    });

    expandAllBtn.addEventListener("click", () => {
      document.querySelectorAll("details").forEach(d => d.open = true);
    });

    collapseAllBtn.addEventListener("click", () => {
      document.querySelectorAll("details").forEach(d => d.open = false);
    });

    markAllBtn.addEventListener("click", () => {
      SUBJECTS.forEach(s => state[s.id] = true);
      saveState();
      render();
    });

    unmarkAllBtn.addEventListener("click", () => {
      SUBJECTS.forEach(s => state[s.id] = false);
      saveState();
      render();
    });

    resetBtn.addEventListener("click", () => {
      const ok = confirm("¬øSeguro que quieres borrar todo el progreso guardado?");
      if(ok) resetAll();
    });

    render();
  </script>
</body>
</html>
